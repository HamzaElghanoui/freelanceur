
{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <h1>Project creation</h1>

    {{ form_start(form) }}
        <div class="form-group {% if form.name.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(form.name, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>

         <div class="form-group  {% if form.description.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(form.description, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>
        
         <div class="form-group  {% if form.price.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(form.price, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>
        <div class="form-group  {% if form.image.url.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(form.image.url, {'required':false, 'attr': { 'class': 'form-control-file' }}) }}
        </div>
        <div class="form-group  {% if form.image.alt.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(form.image.alt, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>
            {{ form_label(form.skills) }}
            <br>
            {# <input type="checkbox" class="selectAllCheckboxes">Seleccionar todos<br> #}
            <div id="provs">
            {% for field in form.skills %}
            <div class="provsli" style="display: inline-block; width: 180px;">
                {{ form_widget(field) }}
                {{ form_label(field) }}
            </div>
            {% endfor %}
            </div>
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('project_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
