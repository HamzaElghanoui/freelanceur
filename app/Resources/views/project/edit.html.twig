
{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <h1>Project edit</h1>

        {{ form_start(edit_form) }}
        <div class="form-group {% if edit_form.name.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(edit_form.name, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>

         <div class="form-group  {% if edit_form.description.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(edit_form.description, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>
        
         <div class="form-group  {% if edit_form.price.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(edit_form.price, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>
        <div class="form-group  {% if edit_form.image.url.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(edit_form.image.url, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>
        <div class="form-group  {% if edit_form.image.alt.vars.errors | length > 0 %} has-error {% endif %}">
            {{ form_row(edit_form.image.alt, {'required':false, 'attr': { 'class': 'form-control' }}) }}
        </div>
            {{ form_label(edit_form.skills) }}
            <br>
            {# <input type="checkbox" class="selectAllCheckboxes">Seleccionar todos<br> #}
            <div id="provs">
            {% for field in edit_form.skills %}
            <div class="provsli" style="display: inline-block; width: 180px;">
                {{ form_widget(field) }}
                {{ form_label(field) }}
            </div>
            {% endfor %}
        </div>
        <input type="submit" value="Create" />
    {{ form_end(edit_form) }}

